<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Navbar -->
  <nav class="bg-blue-600 p-4 flex justify-between items-center text-white">
    <h1 class="text-xl font-bold">ðŸ“š Book App Dashboard</h1>
    <a href="/auth/logout" class="bg-red-500 px-3 py-1 rounded hover:bg-red-600">Logout</a>
  </nav>

  <div class="container mx-auto mt-10">

    <!-- Add Book Form -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-8 w-full max-w-lg mx-auto">
      <h2 class="text-2xl font-bold mb-4 text-gray-700">Add a New Book</h2>
      <form action="/books" method="POST" class="space-y-4">
        <input type="text" name="title" placeholder="Book Title" required
          class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-400">
        <input type="text" name="author" placeholder="Author" required
          class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-400">
        <input type="text" name="genre" placeholder="Genre" required
          class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-400">
        <button type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Add Book</button>
      </form>
    </div>

    <!-- Books List -->
    <div class="bg-white shadow-lg rounded-lg p-6">
      <h2 class="text-2xl font-bold mb-4 text-gray-700">Your Books</h2>

      <% if (books.length === 0) { %>
        <p class="text-gray-500">No books found. Add your first book!</p>
      <% } else { %>
        <ul class="space-y-4">
          <% books.forEach(book => { %>
            <li class="flex justify-between items-center border-b pb-2">
              <div>
                <h3 class="text-lg font-semibold"><%= book.title %></h3>
                <p class="text-gray-600">Author: <%= book.author %></p>
                <p class="text-gray-600">Genre: <%= book.genre %></p>
              </div>
              <form action="/books/<%= book._id %>?_method=DELETE" method="POST">
                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                  Delete
                </button>
              </form>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</body>
</html>
